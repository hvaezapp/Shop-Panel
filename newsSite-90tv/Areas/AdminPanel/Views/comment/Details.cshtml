@model Comment

@using ShopPanel.PublicClass



@using ShopPanel.Models.UnitOfWork;


@{
    ViewData["Title"] = "جزییات نظر کاربران";
}


<style>
    .circleInput {
        border-radius: 3px;
    }

    #reportbtns a {
        margin-top: 5px;
        display: block;
    }

</style>


<div class="row center-block box box-primary" style="box-shadow:2px 2px 7px 3px gray;height:auto">
    <div class="col-md-8 col-md-offset-2" style="margin-bottom:5px; margin-top:15px;">



        <div class="form-group">


            <div style="text-align:center">
                <h5>کاربر</h5>
                <hr />
                <img src="~/upload/userAppimage/normalimage/@Model.Tbl_UserApp.image" class="img-circle" width="100" height="100" style="margin-bottom:10px" />

                <table class="table table-responsive text-center table-striped">
                    <thead>
                        <tr style="font-size:15px; font-weight:600;" class="bg-info">

                            <td>@Html.DisplayNameFor(model => model.Tbl_UserApp.firstName)</td>

                            <td>@Html.DisplayNameFor(model => model.Tbl_UserApp.lastName)</td>


                        </tr>
                    </thead>
                    <tbody>

                        <tr>

                            <td>@Model.Tbl_UserApp.firstName</td>

                            <td>@Model.Tbl_UserApp.lastName </td>

                        </tr>

                    </tbody>
                </table>
            </div>

            <hr />





            <div class="form-group">
                <label asp-for="title" class="control-label"></label>

                <p>
                    @Model.title
                </p>

            </div>

            <hr />

            <div class="form-group">
                <label asp-for="body" class="control-label"></label>

                <p>
                    @Model.body
                </p>

            </div>

            <hr />




            <div class="form-group">
                <label asp-for="dateShamsi" class="control-label"></label>

                <p>
                    @Model.dateShamsi
                </p>

            </div>


            <hr />

            <H4> محصول مرتبط</H4>

            <br/>

            <div class="form-group">

                <label asp-for="Tbl_Products.title" class="control-label"></label>
                <p>

                    @Model.Tbl_Products.title
                </p>

            </div>


            <hr />

            <div class="form-group">
                <label asp-for="Tbl_Products.summary" class="control-label"></label>

                <p>

                    @Model.Tbl_Products.summary
                </p>

            </div>



            <a class="btn btn-primary btn-block" asp-controller="Product" asp-action="Details" asp-route-Id="@Model.product_id">برو به محصول</a>



        </div>

    </div>
</div>








@Html.Partial("_Modal", new BootstrapModel { ID = "modal-all-support", Size = ModalSize.Large })
@Html.Partial("_Modal", new BootstrapModel { ID = "modal-all-support-user", Size = ModalSize.Medium })

@section PanelScripts{
    <script src="~/js/modal-js/all-support-index.js"></script>
 



}