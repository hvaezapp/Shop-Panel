@model payment


@using ShopPanel.PublicClass

@{
    Layout = null;
}

<style>
    .img-circle {
        width: 100px;
        height: 100px;
        border: 1px solid red;
    }

    table {
        margin-top: 20px;
    }



    h5 {
    }



    .center {
        text-align: center;
    }

    .images {
        overflow: scroll;
        height: 300px;
        width: 600px;
        margin: auto;
    }

    .img-banner {
        width: 200px;
        height: 200px;
    }

    .center > img {
        display: inline-block;
    }

        .center > img :hover {
            transform: scale(2,2)
        }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">جزییات پرداخت</h4>
</div>

<div class="modal-body form-horizontal">
    <div class="center">
        <h5>اطلاعات پرداخت کننده</h5>
        <hr />
        <img src="~/upload/userAppimage/normalimage/@Model.Tbl_UserApp.image" class="img-circle " alt="@Model.Tbl_UserApp.firstName" />

        <table class="table table-responsive text-center table-striped">
            <thead>
                <tr style="font-size:15px; font-weight:600;" class="bg-info">
                    <td>@Html.DisplayNameFor(model => model.Tbl_UserApp.firstName)</td>
                    <td>@Html.DisplayNameFor(model => model.Tbl_UserApp.lastName)</td>
                    <td>@Html.DisplayNameFor(model => model.Tbl_UserApp.phone)</td>
                    <td>@Html.DisplayNameFor(model => model.Tbl_UserApp.gender)</td>
                    <td>@Html.DisplayNameFor(model => model.Tbl_UserApp.type)</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Tbl_UserApp.firstName</td>
                    <td>@Model.Tbl_UserApp.lastName </td>
                    <td>@Model.Tbl_UserApp.phone</td>

                </tr>

            </tbody>
        </table>
    </div>



        <ul class="list-group">
            <li class="list-group-item">
                <label class="control-label" asp-for="comment"></label>
                @Model.comment
            </li>
            <li class="list-group-item">

                <label class="control-label" asp-for="amount"></label>
                @Model.amount.RialToToman().ToPrice() تومان
            </li>
            <li class="list-group-item">
                <label class="control-label" asp-for="refid"></label>
                @Model.refid

            </li>
            <li class="list-group-item">
                <label class="control-label" asp-for="dateShamsi"></label>
                @Model.dateShamsi

            </li>
        </ul>
    
</div>






<div class="modal-footer" style="text-align:left;">
    <button class="btn btn-default" type="button" data-dismiss="modal">برگشت</button>
</div>