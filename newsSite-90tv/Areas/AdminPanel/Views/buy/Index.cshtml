@model IEnumerable<Buy>



@using newsSite90tv.PublicClass

@using newsSite90tv.Models.UnitOfWork

@inject IUnitOfWork _context

@{
    ViewData["Title"] = "خرید ها ";

    int row = 1;
}


<style>
    #idximg {
        width: 100%;
        height: 100%;
        border-radius: 10px;
    }

    .circleInput {
        border-radius: 3px;
    }
</style>


@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["type"]">
        <span class="close" data-dismiss="alert">
            &times;
        </span>

        @TempData["message"]

    </div>
}

<div class="row center-block box box-success" style="box-shadow:2px 2px 7px 3px gray;">
    <div class="panel panel-primary col-md-10 col-md-offset-1" style="margin-top:25px; margin-bottom:25px;">

        <div class="panel-body">
            <div>
                <h5>مرتب سازی بر اساس</h5>
                <select class="form-control" id="sort">

                    <option id="all" value="4">همه</option>
                    <option id="suspend" value="0" class="text-primary">معلق</option>
                    <option id="buying" value="1" class="text-warning">در  حال خرید</option>
                    <option id="success" value="2" class="text-success">موفق</option>
                    <option id="fail" value="3" class="text-danger">ناموفق</option>
                </select>
            </div>

        </div>

        <hr style="height:1px; background-color:gray;" />

        @if (Model != null && Model.Count() != 0)
        {


            <div class="box box-body table-responsive no-padding">

                <table class="table table-responsive text-center">
                    <thead>
                        <tr style="font-size:15px; font-weight:600;">
                            <td>ردیف</td>
                            <td>@Html.DisplayNameFor(model => model.product_id)</td>
                            <td>@Html.DisplayNameFor(model => model.shop_id)</td>
                            <td>@Html.DisplayNameFor(model => model.qty)</td>
                            <td>@Html.DisplayNameFor(model => model.price)</td>
                            <td>@Html.DisplayNameFor(model => model.totalprice)</td>
                            <td>@Html.DisplayNameFor(model => model.createdatesh)</td>
                            <td>@Html.DisplayNameFor(model => model.buystatus)</td>
                            <td>عملیات</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() != 0)
                        {
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @(row++)
                                    </td>



                                    <td>
                                        @item.Tbl_Product.title
                                    </td>


                                    <td>
                                        @item.Tbl_Shop.title
                                    </td>

                                    <td>
                                        @item.qty  عدد
                                    </td>

                                    <td>
                                        @item.price.RialToToman().ToPrice() تومان
                                    </td>



                                    <td>
                                        @item.totalprice.RialToToman().ToPrice() تومان
                                    </td>

                                    <td>
                                        @item.createdatesh
                                    </td>


                                    <td>
                                        @item.buystatus.checkbuyStatus()
                                    </td>




                                    <td>


                                        <a class="btn btn-info" asp-controller="buy" asp-action="Details" asp-route-Id="@item.Id" data-toggle="modal" data-target="#modal-action-detail">
                                            <span class="glyphicon glyphicon-info-sign"></span>
                                            جزییات
                                        </a>


                                        <a class="btn btn-danger" asp-controller="buy" asp-action="Delete" asp-route-Id="@item.Id" data-toggle="modal" data-target="#modal-action-delete">
                                            <span class="glyphicon glyphicon-trash"></span>
                                            حذف
                                        </a>


                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>



            </div>
        }
        else
        {
            <div class="alert alert-info">
                در حال حاضر خریدی وجود ندارد
            </div>
        }
    </div>
</div>





@* Paging *@
@if (ViewBag.PageCount > 1)
{
    <div class="row text-center">
        <nav>
            <ul class="pagination">
                @if ((int)ViewBag.PageID > 1)
                {
                    @* Previous *@
                    <li>
                        <a asp-controller="buy" asp-action="Index" asp-route-Page="@((int)ViewBag.PageID - 1)" asp-route-q="@ViewBag.q">
                            <span>&laquo;</span>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= (ViewBag.PageCount); i++)
                {
                    <li class="@(((int)ViewBag.PageID==i)?" active":"")">
                        <a asp-controller="buy" asp-action="Index" asp-route-page="@i" asp-route-q="@ViewBag.q">
                            @i
                            <span class="sr-only"></span>
                        </a>
                    </li>
                }
                @if ((int)ViewBag.PageID <= (int)ViewBag.PageCount - 1)
                {
                    @* Next *@
                    <li>
                        <a asp-controller="buy" asp-action="Index" asp-route-Page="@((int)ViewBag.PageID + 1)" asp-route-q="@ViewBag.q">
                            <span>&raquo;</span>
                        </a>
                    </li>

                }
            </ul>
        </nav>
    </div>

}



@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-delete", Size = ModalSize.Large })
@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-detail", Size = ModalSize.Large })


@section PanelScripts
    {
    <script>

        let q = Number.parseInt(@ViewBag.q);

        switch (q) {

            case 0:
                $('#suspend').attr("selected", "selected")
                break;
            case 1:
                $('#buying').attr("selected", "selected")
                break;
            case 2:
                $('#success').attr("selected", "selected")
                break;
            case 3:
                $('#fail').attr("selected", "selected")
                break;
            case 4:
                $('#all').attr("selected", "selected")
                break;
            default:
        }




        $('#sort').change(function () {

            var value = $(this).val();
            window.location.assign("/AdminPanel/buy?page=1&q=" + value);

        });

    </script>
}

