@model newsSite90tv.Models.ViewModels.PropertyCreateViewModel

@{
    Layout = null;
}

<style>
   form{
       padding:10px;
   }

    .circleInput {
        border-radius: 3px;
    }
</style>

<form asp-controller="propertypart" asp-action="EditProp" method="post">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">ویرایش خصوصبت در بخش انتخابی</h4>
    </div>


        <input type="hidden" asp-for="property.part_id"/>
        <input type="hidden" asp-for="property.isenable"/>
        <input type="hidden" asp-for="property.Id"/>

    <div class="modal-body form-horizontal">

        <div class="form-group">
            <label asp-for="property.name" class="control-label"></label>
            <input asp-for="property.name" class="form-control circleInput" required />
        </div>

        <div class="form-group">
            <label asp-for="property.cat_id" class="control-label"></label>
            <select asp-for="property.cat_id" asp-items="@(new SelectList(Model.category , "Id" , "Title" ))"></select>
        </div>

    </div>


    <div class="modal-footer" style="text-align:left;">
        <button class="btn btn-default" type="button" data-dismiss="modal">برگشت</button>
        <button class="btn btn-success" type="submit">
            ایجاد
        </button>
    </div>

</form>