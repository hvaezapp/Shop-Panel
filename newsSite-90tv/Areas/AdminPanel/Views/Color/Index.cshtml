@model IEnumerable<Color>

@using newsSite90tv.Models.UnitOfWork


@using newsSite90tv.PublicClass

@{
    ViewData["Title"] = "رنگ بندی  ";

    int row = 1;
}

@inject IUnitOfWork _conx

<style>
    #idximg {
        width: 100%;
        height: 100%;
        border-radius: 10px;
    }

    .circleInput {
        border-radius: 3px;
    }
</style>


@if (TempData["message"] != null)
{
    <div class="alert alert-@TempData["type"]">
        <span class="close" data-dismiss="alert">
            &times;
        </span>

        @TempData["message"]

    </div>
}

<div class="row center-block box box-success" style="box-shadow:2px 2px 7px 3px gray;">
    <div class="panel panel-primary col-md-10 col-md-offset-1" style="margin-top:25px; margin-bottom:25px;">

        <div class="panel-body">
            <div>
                <a class="btn btn-primary" asp-controller="color" asp-action="Create" data-toggle="modal" data-target="#modal-action-create">
                    <i class="glyphicon glyphicon-plus"></i>
                    افزودن رنگ بندی جدید
                </a>
            </div>

        </div>

        <hr style="height:1px; background-color:gray;" />

        <div class="box box-body table-responsive no-padding">

            <table class="table table-responsive text-center">
                <thead>
                    <tr style="font-size:15px; font-weight:600;">
                        <td>ردیف</td>
                        <td>@Html.DisplayNameFor(model => model.name)</td>
                        <td>@Html.DisplayNameFor(model => model.nameen)</td>
                        <td>@Html.DisplayNameFor(model => model.code)</td>
                        <td>عملیات</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {

                    <tr>
                        <td>
                            @(row++)
                        </td>

                        <td>
                            @item.name

                            <button style="background-color:@item.code">&nbsp;&nbsp;&nbsp;</button>
                        </td>
                        <td>
                            @item.nameen
                        </td>


                        <td>
                            @item.code

                        </td>

                        <td>

                            <a class="btn btn-danger" asp-controller="color" asp-action="Delete" asp-route-Id="@item.Id" data-toggle="modal" data-target="#modal-action-delete">
                                <span class="glyphicon glyphicon-trash"></span>
                                حذف
                            </a>


                            <a class="btn btn-info" asp-controller="color" asp-action="Edit" asp-route-Id="@item.Id" data-toggle="modal" data-target="#modal-action-edit">
                                <span class="glyphicon glyphicon-info-sign"></span>
                                ویرایش
                            </a>

                        </td>
                    </tr>
                        }
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>







@* Paging *@
@if (ViewBag.PageCount > 1)
{
    <div class="row text-center">
        <nav>
            <ul class="pagination">
                @if ((int)ViewBag.PageID > 1)
                {
                    @* Previous *@
                    <li>
                        <a asp-controller="color" asp-action="Index" asp-route-Page="@((int)ViewBag.PageID - 1)">
                            <span>&laquo;</span>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= (ViewBag.PageCount); i++)
                {
                    <li class="@(((int)ViewBag.PageID==i)?" active":"")">
                        <a asp-controller="color" asp-action="Index" asp-route-page="@i">
                            @i
                            <span class="sr-only"></span>
                        </a>
                    </li>
                }
                @if ((int)ViewBag.PageID <= (int)ViewBag.PageCount - 1)
                {
                    @* Next *@
                    <li>
                        <a asp-controller="color" asp-action="Index" asp-route-Page="@((int)ViewBag.PageID + 1)">
                            <span>&raquo;</span>
                        </a>
                    </li>

                }
            </ul>
        </nav>
    </div>

}



@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-create", Size = ModalSize.Medium })
@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-edit", Size = ModalSize.Medium })
@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-delete", Size = ModalSize.Medium })



