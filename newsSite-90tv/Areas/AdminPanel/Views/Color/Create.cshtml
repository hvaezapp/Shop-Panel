@model Color

@{
    Layout = null;
}

<form asp-controller="Color" asp-action="Create" method="post" id="frmcolor">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"> ایجاد رنگ بندی</h4>
    </div>

    <div class="modal-body form-horizontal">

        <div class="col-md-4 box box-primary">
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control circleInput" required placeholder="نام رنگ را وارد نمایید" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="nameen" class="control-label"></label>
                <input asp-for="nameen" class="form-control circleInput" required placeholder="نام رنگ(انگلیسی) را وارد نمایید" />
                <span asp-validation-for="nameen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="code" class="control-label"></label>
                <input type="color" id="colorselct" style="border-radius:10px;margin-bottom:5px" />
                <input asp-for="code" class="form-control circleInput" required placeholder="نام رنگ(انگلیسی) را وارد نمایید" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>


            

        </div>

    </div>


    <div class="modal-footer" style="text-align:left;">
        <button class="btn btn-default" type="button" data-dismiss="modal">برگشت</button>
        <button class="btn btn-success" type="submit">
            ایجاد
        </button>
    </div>

</form>


<script>
    $('#colorselct').change(function () {

        $('#code').val($(this).val());

    })
</script>
