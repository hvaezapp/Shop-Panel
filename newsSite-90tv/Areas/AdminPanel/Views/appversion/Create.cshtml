@model Appversion


@{
    ViewData["Title"] = "افزودن تنظیمات ورژن اپلیکیشن";
}

<style>


    textarea {
        min-width: 600px;
        max-height: 100px;
        max-height: 100px;
        min-width: 600px;
    }
</style>



@if (ViewBag.message != null)
{
    <div class="alert alert-@ViewBag.type">
        <span class="close" data-dismiss="alert">&times;</span>
        @ViewBag.message
    </div>
}

<div class="row center-block box box-primary" style="box-shadow:2px 2px 7px 3px gray;">
    <div class="col-md-6 col-md-offset-2" style="margin-bottom:15px; margin-top:15px;">

        <div class="panel panel-body">
            <div>
                <b>
                  توجه :  مقدار ورژن کد جدید از اضافه شدن یک مقدار به ورژن کد قدیمی تولید میشود. 
                </b>
            </div>
           
            <div style="margin-top:10px;margin-bottom:10px;">
                <button class="btn btn-sm btn-info" onclick="alert('ورژن کد یا شماره ورژن کد است که در سمت اپ اندروید برای نشان دادن ورژن جاری برنامه است ')">ورژن کد چیست ؟</button>

            </div>
            
            <div class="alert alert-warning">

                <span class="glyphicon glyphicon-question-sign"></span>
                مثال : ورژن کد قدیم : 1
                <br />
                ورژن کد جدید : 2
            </div>
        </div>


        <form asp-area="AdminPanel" asp-controller="appversion" asp-action="create" method="post">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>





            <div class="form-group">
                <label asp-for="versionName" class="control-label"></label>
                <input asp-for="versionName" class="form-control circleInput area" placeholder="نام  ورژن اپلیکیشن را وارد نمایید" />
                <span asp-validation-for="versionName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="desc" class="control-label"></label>
                <textarea asp-for="desc" class="form-control circleInput area" placeholder="توضیحات  ورژن  جدیداپلیکیشن را وارد نمایید"></textarea>
                <span asp-validation-for="desc" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="link" class="control-label"></label>
                <input asp-for="link" class="form-control circleInput area" placeholder="لینک دانلود ورژن جدید را وارد نمایید" />
                <span asp-validation-for="link" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-success" id="btnsubmit" />
                <a asp-action="Index" class="btn btn-danger">بازگشت</a>
            </div>



        </form>

    </div>


</div>

<!-- Modal -->
<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"> اطلاعات </h4>
            </div>
            <div class="modal-body" id="MyModalBody">

            </div>

            <div class="modal-footer" style="text-align:left;">
                <button class="btn btn-primary" type="button" data-dismiss="modal">برگشت</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->




