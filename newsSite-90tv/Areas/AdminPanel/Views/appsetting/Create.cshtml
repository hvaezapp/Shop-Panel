@model Appsetting

@{
    ViewData["Title"] = "افزودن تنظیمات اپلیکیشن";

}

<style>

    textarea {
        min-height: 200px;
        min-width: 600px;
        max-height: 200px;
        max-width: 600px;
    }
</style>


@if (ViewBag.message != null)
{
    <div class="alert alert-@ViewBag.type">
        <span class="close" data-dismiss="alert">&times;</span>
        @ViewBag.message
    </div>
}

<div class="row center-block box box-primary" style="box-shadow:2px 2px 7px 3px gray;height:auto">
    <div class="col-md-6 col-md-offset-1" style="margin-bottom:15px; margin-top:15px;">
        <form asp-area="AdminPanel" asp-controller="appsetting" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <h3>تنظیمات عمومی اپلیکیشن</h3>
            <hr />

            <div class="form-group">
                <label asp-for="about" class="control-label"></label>
                <textarea asp-for="about" class="form-control circleInput" placeholder="مقدار دریاره اپلیکیشن وارد نمایید"></textarea>
                <span asp-validation-for="about" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control circleInput" placeholder="مقدار ایمیل تماس با ما وارد نمایید" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control circleInput" placeholder="مقدار شماره تماس تماس با ما وارد نمایید" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>


            <hr />
            <h3>اطلاعات بانکی شما</h3>
            <hr />

            <div class="form-group">
                <label asp-for="ownername" class="control-label"></label>
                <input asp-for="ownername" class="form-control circleInput" placeholder="مقدار مالک حساب  وارد نمایید" />
                <span asp-validation-for="ownername" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label asp-for="shabacode" class="control-label"></label>

                <input asp-for="shabacode" class="form-control circleInput" placeholder="شماره شبا بانکی را وارد نمایید" />
                <span asp-validation-for="shabacode" class="text-danger"></span>
            </div>


            <hr />
            <h3>بخش فروش و کارمزد برنامه</h3>
            <hr />

            <div class="form-group">
                <label asp-for="wage" class="control-label"></label>
                %<input asp-for="wage" class="form-control circleInput" min="0" max="100" placeholder="مقدار کارمزد فروش  وارد نمایید" />
                <span asp-validation-for="wage" class="text-danger"></span>
            </div>







            <div class="form-group">
                <div>
                    <input type="submit" value="ایجاد" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-danger">بازگشت</a>
                </div>
            </div>

        </form>

    </div>




</div>


